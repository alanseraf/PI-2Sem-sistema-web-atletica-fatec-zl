<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <!--Metadados-->
        <%- include('../partials/head-meta'); %>
        <!--Icone-->
        <link rel="icon" href="assets\img\icon\logo_icone.ico" type="image/x-icon">
        <!--CSS: Base -->
        <link rel="stylesheet" href="./assets/css/normalize.css">
        <link rel="stylesheet" href="./assets/css/reset.css">
        <link rel="stylesheet" href="assets\css\base.css">
        <!--CSS: Rodapé-->
        <link rel="stylesheet" href="assets\css\rodape.css">
        <link rel="stylesheet" href="assets\css\rodape-icones\icones__redeSociais.css">
        <link rel="stylesheet" href="assets\css\rodape-icones\icones.css">
        <link rel="stylesheet" href="assets\css\rodape-icones\iconesLogo-fatec.css">
        <link rel="stylesheet" href="assets\css\rodape-icones\iconesRedesSocias-icone.css">
        <link rel="stylesheet" href="assets\css\rodape-desenvolvimento\desenvolvimento-descricao.css">
        <link rel="stylesheet" href="assets\css\rodape-desenvolvimento\desenvolvimento.css">
        <!--CSS: Usuário ADM-->    
        <link rel="stylesheet" href="assets\css\usuario\usuario.css">
        <link rel="stylesheet" href="assets\css\usuario\usuario-barra.css">
        <link rel="stylesheet" href="assets\css\usuario\usuario-menu.css">
        <link rel="stylesheet" href="assets\css\formularios\edicao.css">
        <%- include('../partials/head-js'); %>
        <!--Titulo da Página-->     
    <title>Usuário</title>
</head>
<body>
    <main id="conteudo">
    <section class="barra">
        <div class="barra__descricao">
            <a href="/usuario"><img class="barra__icone" src="assets\img\usuario\arrow-undo-outline.svg" alt=""></a>
            <img class="descricao__logo" src="./assets/img/menu-superior/logo_atletica.png" alt="Imagem do logo da Atlética da Fatec Zona Leste com um escudo nas cores vermelha e amarela e uma coruja branca">
            <h1 class="descricao__texto">BEM VINDO A PÁGINA DE GESTORES DA ATLÉTICA</h1>
        </div>
        <div class="barra__icones">
            <!--ICONES DE NOTIFICAÇÃO, MENSAGENS, ETC-->
        </div>
        <div class="barra__usuario">
            <p class="usuario__nome">GERENCIAR EVENTOS</p>
        </div>
    </section>
    <div class="container">
        <section class="menu">
            <ul class="menu__item">
                <li><img class="item_icone" src="assets\img\usuario\person.svg" alt="">Gerenciar Membros</li>
                <li><img class="item_icone" src="assets\img\usuario\basketball.svg" alt="">Gerenciar Esportes</li>
                <li><img class="item_icone" src="assets\img\usuario\calendar.svg" alt="">Gerenciar Eventos</li>
            </ul>
        </section>
        <!-- Formulário de edição -->
        <section class="edicao">
            <form  class="edicao___form" method="POST" action="" >
                <h1 class="form__titulo">Alterar dados de Eventos</h1>
                <div class="form__campos">
                    <input name="id" type="hidden" value=' <%= evento.id_evento %> '>  

                    <label for="nome">Nome</label>
                    <input type="text" name="nome"  value=' <%= evento.nome %> '>

                    <label for="descricao">Descricao</label>
                    <input type="text" name="descricao"  value=' <%= evento.descricao %> '>

                    <label for="data">Data</label>
                    <input type="date" name="data"  value=' <%= evento.data_realizacao %> '>

                    <label for="horario">Horario</label>
                    <input type="text" name="horario"  value=' <%= evento.horario_inicio %> '>

                    <label for="localidade">Local</label>
                    <input type="text" name="localidade"  value=' <%= evento.localidade %> '>

                    <label for="orcamento">Orçamento</label>
                    <input type="text" name="orcamento"  value=' <%= evento.orcamento %> '>
        
                </div>
                <div class="form__botoes"><br>
                    <input class="botao__alterar" type="submit" value= "Alterar Dados" >
                </div>
            </form>
        </section>

        
    </div>    

    </main>
     <%- include('../partials/body-js'); %>
</body>
</html>