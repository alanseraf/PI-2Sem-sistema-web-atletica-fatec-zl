<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <!--Metadados-->
    <%- include('../partials/head-meta'); %>
    <!--Link-partials-->
    <%- include('../partials/head-links'); %>
    <!--CSS links-->         
    <link rel="stylesheet" href="assets\css\formularios\inscricao-modalidades.css">
   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="./assets/JS/contraste.js"></script>
    <title>Inscreva-se</title>
</head>
<body>
    <!--Header-->
    <%- include('../partials/header'); %>

    <main id="conteudo">
        <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
        <script>
            new window.VLibras.Widget('https://vlibras.gov.br/app');
        </script>

        <div class="container">
            <section class="descricao">
                <h1 class="descricao__titulo">Inscrição: Modalidades</h1>
                <p class="descricao__texto">Venha fazer parte dos times da Atlética</p>
            </section>
            <div class="incricao__caixa">
                <form action="" class="inscricao__form">
                    <div class="inscricao__caixa">
                        <div class="inscricao__select">    
                            <label for="modalidade">Escolha sua modalidade esportiva</label>
                            <select name="modalidade">
                                <option value="Futsal">Futsal</option>
                                <option value="Basquete">Basquete</option>
                                <option value="Voleibol">Voleibol</option>  
                                <option value="Voleibol">Xadrez</option>        
                            </select>
                            <label for="genero">Gênero</label>
                            <select name="genero" id="">
                                <option value="Masculino">Maculino</option>
                                <option value="Feminino">Feminino</option>  
                                <option value="Masculino">Misto</option>     
                            </select>
                            <label for="horario">Escolha dia e horário do Treino</label>
                            <select name="horario" id="">
                                <option value="Terca">Terça-feira das 10:00 as 12:00 horas</option>
                                <option value="Quarta">Quarta-feira das 14:00 as 16:00 horas</option>
                                <option value="Quinta">Quinta-feira das 16:00 as 18:00 horas</option>   
                            </select>
                            <label for="equipamento">Equipamento necessário para os treinos</label>
                            <input type="text" name="equipamento" id="" value="Sem recomendação">
                        </div>
                        <div class="inscricao__img">
                            <img src="assets\img\modalidades\futsal.png" alt="" class="inscricao img">
                        </div>
                    </div>
                            <div class="form__botoes"><br>
                                <input class="botao__cadastrar" type="submit" value= "Cadastrar" >
                                <input class="botao__contato" type="button" value= "Entrar em Contato" >
                            </div>
                    </form>
            </div>
        </div>
       

    </main>
    <!--Footer-->
    <%- include('../partials/footer'); %>
    <!--javaScript links-->
    <script type="text/javascript" src="./assets/JS/fonte.js"></script>
    <script type="text/javascript" src="assets\JS\menu_movel.js"></script>
</body>
</html>